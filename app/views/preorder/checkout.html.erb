<div class="gray_background">
  <div class="wrapper clearfix">
    <div class="main_content">
      <h3>Delivery in January 2013</h3>
      <p>
        Access to cloud hosted desktop environments and a choice of OS installed on a 16GB nano USB drive.
        <br />
        <br />
        Enter your email address below.
      </p>
      <%= form_tag "/preorder/prefill", :id => "checkout" do %>
        <%= email_field_tag "email", nil, :placeholder => "hello@osgenie.com", :required => "required", :id => "email" %>
        <%= hidden_field_tag "preorder", true %>
        <%= hidden_field_tag "quantity", params[:quantity] %>
        <%= submit_tag "Pre-Order $60", :class => "blue_button disabled", :id => "amazon_button" %>
      <% end %>
    </div>
    <%= render 'preorder/checkout/sidebar' %>
  </div>
</div>
